#VRML V2.0 utf8

Transform {
  translation 0 1 0  # Di chuyển hình kim tự tháp lên 1 đơn vị theo trục y
  children [
    Shape {
      geometry IndexedFaceSet {
        coord Coordinate {
          point [
            -1 0 -1,   # Đỉnh 0
            1 0 -1,    # Đỉnh 1
            1 0 1,     # Đỉnh 2
            -1 0 1,    # Đỉnh 3
            0 2 0      # Đỉnh trên cùng (đỉnh 4)
          ]
        }
        coordIndex [ 0, 1, 2, 3, -1, 0, 4, 1, -1, 1, 4, 2, -1, 2, 4, 3, -1, 3, 4, 0 ]  # Mô tả các mặt của hình kim tự tháp
      }
      appearance Appearance {
        material Material {
          diffuseColor 1 0 0  # Màu đỏ
        }
      }
    }
  ]
}
